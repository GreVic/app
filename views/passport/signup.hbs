<section class="container">
  <div class="width-forms">
    <h2>Sign Up</h2>
    <form action="/signup" method="POST" id="form-container">
      <div class="form-group">
        <label for="username">User</label>
        <input id="username" type="text" class="form-control" name="username" placeholder="Your Username" required>
      </div>
      <div class="form-group">
        <label for="useremail">Email</label>
        <input id="useremail" type="email" class="form-control" name="useremail" placeholder="Your Email" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input id="password" type="password" class="form-control" name="password" placeholder="********" required>
      </div>
      {{#if message}}
      <div class="error-message">{{ message }}</div>
      {{/if}}
      <button type="submit" class="button">Create account</button>
      <br><br>
      <p class="account-message">
        Do you already have an account?
        <a href="/login">Login</a>
      </p>
    </form>
  </div>
</section>