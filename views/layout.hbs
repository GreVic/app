          <a class="nav-link" href="/logout">Log Out</a>
        </li>

        {{else}}

        <li class="nav-item active">
          <a class="nav-link" href="/signup">Sign Up <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/login">Login</a>
        </li>
        {{/if}}
      </ul>

